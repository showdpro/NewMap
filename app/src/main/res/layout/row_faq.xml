<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_faq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:orientation="vertical"
        apps:cardBackgroundColor="@color/white_100"
        apps:cardCornerRadius="@dimen/margin_5"
        apps:cardElevation="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_10">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="16sp"
                apps:fontName="@string/ubuntu_b" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_dcription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:text=""
                android:textColor="@color/gray_107"
                android:textSize="14sp"
                apps:fontName="@string/ubuntu_r" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>