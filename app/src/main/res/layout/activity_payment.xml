<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_100"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/ly_back"
            android:layout_width="@dimen/height_50"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow" />

        </RelativeLayout>

        <in.mapbazar.mapbazar.View.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/height_50"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_payment"
            android:textColor="@color/white_100"
            android:textSize="@dimen/font_17"
            app:fontName="@string/ubuntu_m" />

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <in.mapbazar.mapbazar.View.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="@dimen/margin_20"
        android:gravity="center_vertical"
        android:text="Choose Delivery Slot :
"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18"
        app:fontName="@string/ubuntu_m" />
    <RelativeLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:text="1"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12">

        <in.mapbazar.mapbazar.View.CustomTextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="abc"
            android:gravity="center"
            android:textSize="15sp"
            apps:fontName="@string/ubuntu_b" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_icon_black"
            android:rotation="90" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ll_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_blue"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        android:text="1"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/font_12">

        <in.mapbazar.mapbazar.View.CustomTextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="abc"
            android:gravity="center"
            android:textSize="15sp"
            apps:fontName="@string/ubuntu_b" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/back_icon_black"
            android:rotation="90" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/margin_13"
                app:fontName="@string/ubuntu_r" />



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. of Items"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_qty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:padding="@dimen/margin_3"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7"
            >

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtotol"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_subtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:padding="@dimen/margin_3"
                android:text=""
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"

            android:background="@color/gray1" />
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7"
            >

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_taxvalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:padding="@dimen/margin_3"
                android:text="INR 0.0"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
    android:visibility="gone"
            android:background="@color/gray1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_tax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Charge including GST"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:padding="@dimen/margin_3"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:orientation="horizontal"
            android:padding="@dimen/margin_7">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />


            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|right"
                android:padding="@dimen/margin_3"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_15"
                app:fontName="@string/ubuntu_r" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray1" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/lay_status_delivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_20"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgcolor2"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:src="@drawable/cod" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center"
                android:text="@string/cod1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                app:fontName="@string/ubuntu_m" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center|right">

                <ImageView
                    android:id="@+id/image_status"
                    android:layout_width="@dimen/height_30"
                    android:layout_height="@dimen/height_30"
                    android:background="@drawable/status_delivered"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/lay_status_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_10"
        android:orientation="vertical">

        <View
            android:id="@+id/line_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:visibility="gone"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/linear_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgcolor2"
            android:orientation="horizontal"
android:visibility="gone"
            android:padding="@dimen/margin_10">

            <ImageView
                android:layout_width="@dimen/height_40"
                android:layout_height="@dimen/height_40"
                android:src="@drawable/cod" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_20"
                android:gravity="center"
                android:text="@string/SecurePayment"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18"
                app:fontName="@string/ubuntu_m" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center|right">

                <ImageView
                    android:id="@+id/image_payment"
                    android:layout_width="@dimen/height_30"
                    android:layout_height="@dimen/height_30"
                    android:background="@drawable/status_delivered"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:id="@+id/line1_pay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1"
            android:background="@color/gray"
            />

    </LinearLayout>


    <Button
        android:id="@+id/txt_place_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50"
        android:layout_marginLeft="@dimen/height_50"
        android:layout_marginRight="@dimen/height_50"
        android:layout_marginTop="@dimen/height_30"
        android:background="@color/green"
        android:gravity="center"
        android:text="@string/place_order"
        android:textColor="@color/white_100"
        android:textSize="@dimen/font_17"
        />

</LinearLayout>
    </ScrollView>
</LinearLayout>