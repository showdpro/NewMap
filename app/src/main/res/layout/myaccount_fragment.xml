<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="1"
                android:text="@string/personal_info"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:fontName="@string/Montserrat_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_100"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_5">


                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_margin_top"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <in.mapbazar.mapbazar.View.CustomEditTextView
                    android:id="@+id/edt_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_password_margin_top"
                    android:background="@null"
                    android:drawablePadding="@dimen/edt_email_password_drawable_padding"
                    android:hint="@string/user_add_hint"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/light_black_gray"
                    android:textSize="@dimen/edt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_email_password_height"
                    android:layout_marginTop="@dimen/view_email_password_margin_top"
                    android:background="@color/light_gray" />


                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_margin_top"
                    android:text="@string/email1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/edt_email_password_margin_top"
                    android:layout_marginTop="@dimen/edt_email_password_margin_top"
                    android:text=""
                    android:textColor="@color/light_black_gray"
                    android:textSize="@dimen/edt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/gray" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35"
                android:layout_marginBottom="@dimen/edt_email_password_margin_top"
                android:layout_marginLeft="@dimen/edt_email_password_margin_top"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_login_fblogin_text_size"
                app:fontName="@string/ubuntu_b" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16"
                app:fontName="@string/Montserrat_regular" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_100"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_5">

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_margin_top"
                    android:text="@string/current_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.mapbazar.mapbazar.View.CustomEditTextView
                        android:id="@+id/edt_current_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:background="@null"
                        android:drawablePadding="@dimen/edt_email_password_drawable_padding"
                        android:hint="@string/required"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/light_black_gray"
                        android:textColorHint="@color/light_black_gray"
                        android:textSize="@dimen/edt_email_password_text_size"
                        app:fontName="@string/ubuntu_r" />

                    <ImageView
                        android:id="@+id/img_cur_pass"
                        android:layout_width="@dimen/img_password_width_height"
                        android:layout_height="@dimen/img_password_width_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:src="@drawable/hide_password"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_email_password_height"
                    android:layout_marginTop="@dimen/view_email_password_margin_top"
                    android:background="@color/light_gray" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_margin_top"
                    android:text="@string/new_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.mapbazar.mapbazar.View.CustomEditTextView
                        android:id="@+id/edt_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:background="@null"
                        android:drawablePadding="@dimen/edt_email_password_drawable_padding"
                        android:hint="@string/required"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/light_black_gray"
                        android:textColorHint="@color/light_black_gray"
                        android:textSize="@dimen/edt_email_password_text_size"
                        app:fontName="@string/ubuntu_r" />

                    <ImageView
                        android:id="@+id/img_new_pass"
                        android:layout_width="@dimen/img_password_width_height"
                        android:layout_height="@dimen/img_password_width_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:src="@drawable/hide_password"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_email_password_height"
                    android:layout_marginTop="@dimen/view_email_password_margin_top"
                    android:background="@color/light_gray" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/edt_email_margin_top"
                    android:text="@string/confirm_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_email_password_text_size"
                    app:fontName="@string/ubuntu_r" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <in.mapbazar.mapbazar.View.CustomEditTextView
                        android:id="@+id/edt_confim_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:background="@null"
                        android:drawablePadding="@dimen/edt_email_password_drawable_padding"
                        android:hint="@string/required"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textColor="@color/light_black_gray"
                        android:textColorHint="@color/light_black_gray"
                        android:textSize="@dimen/edt_email_password_text_size"
                        app:fontName="@string/ubuntu_r" />

                    <ImageView
                        android:id="@+id/img_canfim_pass"
                        android:layout_width="@dimen/img_password_width_height"
                        android:layout_height="@dimen/img_password_width_height"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/edt_email_password_margin_top"
                        android:src="@drawable/hide_password"
                        android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_email_password_height"
                    android:layout_marginBottom="@dimen/view_email_password_margin_top"
                    android:layout_marginTop="@dimen/view_email_password_margin_top"
                    android:background="@color/light_gray" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_1"
                android:background="@color/gray" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_35"
                android:layout_marginBottom="@dimen/edt_email_password_margin_top"
                android:layout_marginLeft="@dimen/edt_email_password_margin_top"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="@string/CHANGE_PASSWORD"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_login_fblogin_text_size"
                app:fontName="@string/ubuntu_b" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>