<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nested_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">
   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <RelativeLayout
                android:id="@+id/layout_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pager_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/home_img_slider"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/margin_10">

                    <com.viewpagerindicator.CirclePageIndicator
                        android:id="@+id/indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/transparent"
                        android:padding="2dip"
                        app:fillColor="@color/white"
                        app:radius="4dp"
                        app:strokeColor="@color/white"
                        app:strokeWidth="1dp" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/layout_pager"
                android:background="@color/bgcolor1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/margin_80"
                        android:layout_height="@dimen/margin_2"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_15"
                        android:background="@color/gray" />

                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/margin_10"
                        android:text="OUR POPULAR PRODUCTS"
                        android:textColor="@color/gray_107"
                        android:textSize="@dimen/title_home"
                        app:fontName="@string/ubuntu_b" />

                    <View
                        android:layout_width="@dimen/margin_80"
                        android:layout_height="@dimen/margin_2"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:background="@color/gray" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:gravity="bottom">

                <RelativeLayout
                    android:id="@+id/layout_cart"
                    android:layout_width="@dimen/wallet_circle_width"
                    android:layout_height="@dimen/wallet_circle_width"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/img_filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/cart_button" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_cart_cout"
                    android:layout_width="@dimen/height_25"
                    android:layout_height="@dimen/height_25"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/circle_white"
                    android:gravity="center"
                    android:visibility="gone">

                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:id="@+id/txt_cart_cout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/gray_107"
                        android:textSize="@dimen/font_12"
                        app:fontName="@string/ubuntu_l"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/home_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="@dimen/space_10"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cn"
                android:scaleType="fitXY"></ImageView>
        </android.support.v7.widget.CardView>


        <in.mapbazar.mapbazar.View.CustomTextView
            android:id="@+id/txt_recentproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/recentlyview"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            app:fontName="@string/ubuntu_r" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recentproduct_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:scrollbars="none" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/white"
            android:layout_marginTop="-30dp">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/relative_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginRight="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5">

            </com.daimajia.slider.library.SliderLayout>
        </LinearLayout>


        <in.mapbazar.mapbazar.View.CustomTextView
            android:id="@+id/txt_newproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:text="@string/New_Products"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            app:fontName="@string/ubuntu_r" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/new_product_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_10"
                android:scrollbars="none" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/layout_cart_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:alpha="1"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:visibility="gone" />
    <RelativeLayout
        android:id="@+id/ly_loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/white_100"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/map_welcom"/>

    </RelativeLayout>


</RelativeLayout>
