<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_wish"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:layout_marginLeft="@dimen/space_5"
    android:layout_marginRight="@dimen/space_5"
    android:layout_marginBottom="@dimen/space_5"
    android:background="@color/white"
    card_view:cardUseCompatPadding="true">
    <RelativeLayout
        android:id="@+id/rel_wish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">






    <RelativeLayout
        android:id="@+id/rel1"

        android:layout_width="match_parent"
        android:layout_margin="@dimen/space_5"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/space_5"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"/>


        <LinearLayout
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:gravity="top|center"
            android:orientation="vertical">



            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/space_20"
                android:layout_marginStart="@dimen/space_10"
                android:gravity="left"
                android:text="Product Name"
                android:padding="5dp"
                app:fontName="@string/ubuntu_l"
                android:textColor="#837e7e"
                android:textSize="20dp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="2"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pricelay"
                >
                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/product_prize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="10dp"
                    android:text="Price :"
                    android:padding="5dp"
                    app:fontName="@string/ubuntu_l"
                    android:textColor="#837e7e"
                    android:textSize="15dp" />
                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/product_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/product_prize"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:text="Price"
                    app:fontName="@string/ubuntu_l"
                    android:textColor="@color/color_3"
                    android:textSize="15dp" />
                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:fontName="@string/ubuntu_l"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:text="Price"
                    android:textColor="#837e7e"
                    android:textSize="15dp"
                    android:textStyle="italic"/>


            </RelativeLayout>






            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                >
                <TextView
                    android:id="@+id/txtId"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:textSize="10dp"

                    android:text="Weight :"

                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/txtVar"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:textSize="10dp"

                    android:text="Weight :"

                    android:visibility="invisible"
                    />
                <TextView
                    android:id="@+id/single_varient"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1kg"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/space_10"
                    android:paddingRight="@dimen/space_2"
                    />
                <RelativeLayout
                    android:id="@+id/rel_variant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/space_10"
                    android:visibility="gone"
                    android:background="@drawable/relative_unit_layout">
                    <TextView
                        android:id="@+id/unit_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="15sp" />
                    <ImageView
                        android:layout_toRightOf="@id/unit_type"
                        android:background="@drawable/ic_arrow_drop_down_black_24dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp">

                    </ImageView>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_toRightOf="@+id/varient"
                    android:background="@color/colorPrimary"
                    android:clickable="true"
                    android:text="Add"
                    android:textColor="@color/white" />
                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/elegantButton"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/space_10"
                    android:layout_toRightOf="@+id/varient"
                    android:background="@color/colorPrimary"
                    android:elevation="6dp"
                    app:textSize="8dp"
                    app:initialNumber="0"
                    app:finalNumber="10"
                    app:textColor="@color/white"
                    android:visibility="gone"
                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
        <ImageView
            android:id="@+id/delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="@dimen/space_10"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignParentEnd="true"/>
    <View
        android:layout_below="@+id/rel1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"

     android:background="@android:color/darker_gray"
        android:layout_marginTop="@dimen/space_5"></View>
    </RelativeLayout>


</android.support.v7.widget.CardView>


