<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100"
    android:orientation="vertical"
    android:id="@+id/layout_product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_7"
        android:background="@color/white_100"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/height_60"
                android:layout_height="@dimen/height_60">

                <ImageView
                    android:id="@+id/image_order_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center"
            android:orientation="vertical">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/txt_order_productname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/font_14"
                app:fontName="@string/ubuntu_m" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="horizontal">

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/txt_order_productprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/font_12"
                    app:fontName="@string/ubuntu_m" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="X"
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/font_12"
                    app:fontName="@string/ubuntu_m" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/txt_order_productquatity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/font_12"
                    app:fontName="@string/ubuntu_m" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:text="="
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/font_12"
                    app:fontName="@string/ubuntu_m" />

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/txt_order_totalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black_gray"
                    android:textSize="@dimen/font_12"
                    app:fontName="@string/ubuntu_m" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1"
        android:background="@color/gray1" />
</LinearLayout>