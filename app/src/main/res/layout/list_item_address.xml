<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF4444">

    <LinearLayout
        android:id="@+id/view_list_repo_action_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <!-- app:srcCompat="@android:drawable/ic_menu_delete"-->
        <!--app:srcCompat="@android:drawable/ic_menu_edit"-->

        <LinearLayout
            android:id="@+id/view_list_repo_action_update"
            android:layout_width="@dimen/managecar_option1"
            android:layout_height="match_parent"
            android:background="#72CE7C"
            android:gravity="center"
            android:orientation="vertical">


            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="@dimen/managecar_option"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="Edit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16"
                app:fontName="@string/ubuntu_b" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_list_repo_action_delete"
            android:layout_width="@dimen/managecar_option1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <in.mapbazar.mapbazar.View.CustomTextView
                android:layout_width="@dimen/managecar_option1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/margin_5"
                android:text="Delete"

                android:textColor="@android:color/white"
                android:textSize="@dimen/font_16"
                app:fontName="@string/ubuntu_b" />


        </LinearLayout>



    </LinearLayout>

     <include layout="@layout/view_list_address_contain" />
</FrameLayout>