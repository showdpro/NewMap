<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="3dp"
    android:layout_marginRight="3dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="@dimen/height_150"
        android:layout_height="@dimen/height_230"
        android:background="@color/white"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        apps:cardCornerRadius="2dp"
        apps:contentPadding="2dp">

        <LinearLayout
            android:id="@+id/category_rl"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/facebook" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:maxLines="2"
                android:text="Men"

                android:textColor="@color/productnamecolor"
                android:textSize="12sp"
                apps:fontName="@string/ubuntu_r" />

            <in.mapbazar.mapbazar.View.CustomTextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="right"
                android:text="Price"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                apps:fontName="@string/ubuntu_b" />
            <LinearLayout
                android:id="@+id/ll_select_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:background="@drawable/rounded_blue"
                android:orientation="horizontal"
                android:padding="8dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_12">

                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/tet_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="abc"
                    android:textSize="10sp"
                    apps:fontName="@string/ubuntu_b" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/back_icon_black"
                    android:rotation="90" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_2"
                android:layout_marginRight="@dimen/margin_2"
                android:layout_marginTop="10dp"
                android:gravity="center|bottom">

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/ll_plus_minu"
                    android:layout_width="100dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <Button
                        android:id="@+id/btn_min"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_blue"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_20" />

                    <Button
                        android:id="@+id/btn_quty"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_blue"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_12" />

                    <Button
                        android:id="@+id/btn_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_blue"
                        android:text="+"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/font_20" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
