<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/space_1"

    card_view:cardCornerRadius="5dp">
    <RelativeLayout
        android:id="@+id/rel_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wish_before"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/space_8"

            app:srcCompat="@drawable/unfavorite"
            />
        <ImageView
            android:id="@+id/wish_after"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/space_8"

            app:srcCompat="@drawable/favorite"
            android:visibility="gone"
            />
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/rel1"

            android:layout_width="match_parent"
            android:layout_margin="@dimen/space_5"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_subcat_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:src="@mipmap/ic_launcher"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>


            <LinearLayout
                android:layout_toRightOf="@+id/iv_subcat_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"

                android:orientation="vertical">



                <in.mapbazar.mapbazar.View.CustomTextView
                    android:id="@+id/tv_subcat_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="gravity"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/space_20"
                    android:text="Product Name"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    app:fontName="@string/ubuntu_l"
                    android:textSize="16dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pricelay"
                    >

                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:id="@+id/tv_subcat_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Price :"
                        android:textColor="#837e7e"
                        app:fontName="@string/ubuntu_l"
                        android:textSize="16dp" />

                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:id="@+id/product_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/tv_subcat_price"
                        android:paddingTop="3dp"
                        android:text="Price"
                        app:fontName="@string/ubuntu_l"
                        android:textColor="@color/color_3"
                        android:textSize="13dp" />
                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:id="@+id/dis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        app:fontName="@string/ubuntu_l"
                        android:padding="5dp"
                        android:text="Price"
                        android:textColor="#837e7e"
                        android:textSize="10sp" />


                </RelativeLayout>






                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"


                    >
                    <TextView
                        android:id="@+id/txtId"

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="29dp"
                        android:textSize="10dp"
                        android:text="Weight :"
                        android:layout_marginRight="70dp"

                        android:visibility="invisible"
                        />
                    <TextView
                        android:id="@+id/txtVar"

                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginRight="70dp"
                        android:textSize="10dp"
                        android:text="Weight :"
                        android:visibility="invisible"
                        />
                    <in.mapbazar.mapbazar.View.CustomTextView
                        android:id="@+id/single_varient"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="1kg"
                       android:textAlignment="gravity"
                        android:layout_centerVertical="true"
                        app:fontName="@string/ubuntu_l"
                       />
                    <RelativeLayout
                        android:id="@+id/rel_variant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/space_5"
                        android:layout_marginLeft="22dp"
                        android:visibility="gone"
                        android:background="@drawable/relative_unit_layout">
                        <TextView
                            android:id="@+id/unit_type"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                           android:paddingTop="5dp"
                            android:paddingRight="@dimen/space_2"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="text"
                            android:textColor="@color/black"
                            android:textSize="15sp" />
                        <ImageView
                            android:layout_toRightOf="@id/unit_type"
                            android:background="@drawable/ic_arrow_drop_down_black_24dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp">

                        </ImageView>

                    </RelativeLayout>

                   </RelativeLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_add"

                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"

                 android:layout_gravity="center_horizontal|bottom"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/varient"
                android:background="@drawable/bg_rounded_button"
                android:clickable="true"
                android:text="Add"
                android:textColor="@color/white" />
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/elegantButton"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginRight="@dimen/space_10"
                android:layout_toRightOf="@+id/varient"
                android:background="@drawable/bg_rounded_button"
                android:elevation="6dp"
                app:textSize="8dp"
                app:initialNumber="0"
                app:finalNumber="10"
                app:textColor="@color/white"
                android:visibility="gone"
                />

        </LinearLayout>

    </RelativeLayout>





</android.support.v7.widget.CardView>