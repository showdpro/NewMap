<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lay_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_5"
        android:orientation="horizontal"
        android:background="@drawable/rounded_size">

        <ImageView
            android:id="@+id/img_color"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@color/black"
            android:src="@drawable/square_map_bg"
            />

        <ImageView
            android:id="@+id/img_color1"
            android:layout_width="@dimen/height_15"
            android:layout_height="@dimen/height_15"
            android:background="@color/black"
            android:src="@drawable/square_map_bg1"
            android:visibility="gone"/>

        <in.mapbazar.mapbazar.View.CustomTextView
            android:id="@+id/txt_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin_7"
            android:layout_marginRight="@dimen/margin_7"
            android:text="@string/buy_now"
            android:textAllCaps="false"
            android:textColor="@color/black_gray"
            android:textSize="@dimen/font_12"
            app:fontName="@string/ubuntu_r" />

    </LinearLayout>

</LinearLayout>